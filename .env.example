# Application Settings
APP_NAME=Otis Cybersecurity AI Agent
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./data/app.db
# For Production: postgresql://user:password@localhost:5432/otis

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:7b
OLLAMA_TIMEOUT=300

# Chroma Vector Store
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=cybersecurity_knowledge

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id-here
TELEGRAM_APPROVAL_TIMEOUT=300

# Docker Sandbox
DOCKER_SANDBOX_IMAGE=python:3.11-slim
DOCKER_SANDBOX_TIMEOUT=60
DOCKER_SANDBOX_MEMORY_LIMIT=512m
DOCKER_SANDBOX_CPU_LIMIT=1.0

# RAG Data Sources
MITRE_ATTACK_URL=https://raw.githubusercontent.com/mitre/cti/master/enterprise-attack/enterprise-attack.json
NIST_CSF_URL=https://www.nist.gov/cyberframework
OWASP_TOP10_URL=https://owasp.org/www-project-top-ten/

# Feature Flags
ENABLE_APPROVAL_GATE=true
ENABLE_CODE_EXECUTION=true
ENABLE_THREAT_INTEL=true

# Security Policy
DEFAULT_MODE=passive
MAX_ITERATIONS=2
MAX_EXEC_TIME=45

# Audit Logging
AUDIT_LOG_FILE=./data/audit.log
ENABLE_HMAC_INTEGRITY=true

